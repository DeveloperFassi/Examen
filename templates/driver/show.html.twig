{% extends 'base.html.twig' %}

{% block title %}Driver{% endblock %}

{% block body %}
    <h1>Conducteur</h1>

    <table class="table table-striped table-sm">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ driver.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ driver.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ driver.lastname }}</td>
            </tr>
            <tr>
                <th>Numéro de tél</th>
                <td>{{ driver.phoneNumber }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary btn-sm" href="{{ path('driver_index') }}">Retour à la liste</a>

    <a class="btn btn-primary btn-sm" href="{{ path('driver_edit', {'id': driver.id}) }}">éditer</a>

    {{ include('driver/_delete_form.html.twig') }}
{% endblock %}
